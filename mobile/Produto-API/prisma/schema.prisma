// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Produto {
  id          Int    @id @default(autoincrement())
  name        String
  price       Float
  description String
  ingredients String
  imgUrl      String
}

model Usuario {
  id       Int    @id @default(autoincrement())
  name     String
  password String
  email    String @unique
}
